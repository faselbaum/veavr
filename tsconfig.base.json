{
  "compilerOptions": {
    "rootDir": "${configDir}/src",
    "baseUrl": "${configDir}",
    "strict": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "incremental": true,
    "jsx": "react-jsx",
    "tsBuildInfoFile": "${configDir}/.tsbuildinfo",
    "outDir": "${configDir}/dist",
    "paths": {
      "~/*": ["${configDir}/src/*"]
    }
  },
  "buildOptions": {
    "incremental": true
  },
  "include": ["${configDir}/src"]
}
